<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainlayout"
    app:layoutDescription="@xml/activity_splash_scene"
    tools:context=".SplashActivity">


    <ImageView
        android:id="@+id/bigBubble"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:rotation="-35"
        android:src="@drawable/big_background_bubble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bubble"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginBottom="70dp"
        android:rotation="-35"
        android:src="@drawable/backgroundbubble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.574" />

    <ImageView
        android:id="@+id/partyHat"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/partyhat"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.motion.widget.MotionLayout>